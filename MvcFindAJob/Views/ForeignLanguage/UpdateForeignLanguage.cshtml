@model EntityLayer.Concrete.ForeignLanguage
@{
    ViewBag.Title = "UpdateForeignLanguage";
    Layout = "~/Views/Shared/_JobLayout.cshtml";
}

<h2>Yabancı Dil Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("UpdateForeignLanguage", "ForeignLanguage", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.ForeignLanguageID)
    @Html.Label("İsim")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Durum")
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })

</div>
    <br />
    <button class="btn btn-outline-info">Kaydet</button>

}

@using EntityLayer.Concrete
@model List<JobType>
@{
    ViewBag.Title = "GetListJobType";
    Layout = "~/Views/Shared/_JobLayout.cshtml";
}

<h2>İş Tipleri Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.JobTypeID</td>
            <td>@item.Name</td>
            <td>@item.Status</td>
            <td><a href="/JobType/DeleteJobType/@item.JobTypeID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/JobType/UpdateJobType/@item.JobTypeID" class="btn btn-outline-success">Güncelle</a></td>

        </tr>
    }
</table>

<a class="btn btn-outline-info" href="/JobType/AddJobType">İş Tipi Ekle</a>


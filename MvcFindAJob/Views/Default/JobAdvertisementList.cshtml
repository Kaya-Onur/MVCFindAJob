@using EntityLayer.Concrete
@model List<JobAdvertisement>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>İş İlanları</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand m-auto" href="#">FindAJob</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Üye Ol</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Üye Girişi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">İşveren</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Admin</a>
                    </li>
                   
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="İş Ara" aria-label="Search">
                    <button class="btn btn-outline-success p-1 mr-1" type="submit">Ara</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container mb-2 mt-4">
        <div class="row">  
            <div class="col-md-3">
                <div class="list-group list-group-flush">
                    @foreach (var item in Model)
                    {
                        <a href="/Default/GetJobAdvertisement/@item.JobAdvertisementID" class="list-group-item list-group-item-action">@item.JobType.Name~@item.Department.Name <small><i>@(((DateTime)item.AdversimentDate).ToString("dd-MMM-yyyy"))</i></small></a>
                    }
                </div>
                </div>
            <div class="col-md-9">
             @RenderBody()
            </div>
        </div>
    </div>

</body>
</html>

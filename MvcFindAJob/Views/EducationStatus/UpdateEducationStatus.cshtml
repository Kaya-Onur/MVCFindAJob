@model EntityLayer.Concrete.EducationStatus
@{
    ViewBag.Title = "UpdateEducationStatus";
    Layout = "~/Views/Shared/_JobLayout.cshtml";
}

<h2>Eğitim Durumu Güncelleme Sayfası</h2>
@using (Html.BeginForm("UpdateEducationStatus", "EducationStatus", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.EducationStatusID)
    @Html.Label("İsim")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Durum")
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })

</div>
    <br />
    <button class="btn btn-outline-info">Kaydet</button>

}
